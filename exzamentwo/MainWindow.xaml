<Window x:Class="exzamentwo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:exzamentwo"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="400">
    <Grid>
        <StackPanel >
            <TextBlock Text="Здравствуйте!" FontFamily="Arial Black" FontSize="24" Margin="15 15 0 0"></TextBlock>
            <TextBox x:Name="TextBoxLogin" Margin="40 30 40 0" FontSize="20"></TextBox>
            <PasswordBox x:Name="Password" Margin="40 20 40 20" FontSize="20"></PasswordBox>
            <Button Content="Войти" HorizontalAlignment="Center" Width="100" Height="28" Click="ButtonVhod_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
